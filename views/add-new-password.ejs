 
<%- include('header') %>
<div class="container">
      <div class="row">

          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"> Add New Password</div>
                       </div>  
                  <div class="panel-body" >
                      <form action="/add-new-password" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                        
                          <div class="form-group">
                              <%if(errors){%>
                            <% if(errors.passwordCategory && errors.password){%>
                            <p style="text-align: center;color:red;"><%= errors.passwordCategory.msg %></p>
                              <% } %>

                              <% if(errors.passwordCategory && !errors.password){%>
                                <p style="text-align: center;color:red;"><%= errors.passwordCategory.msg %></p>
                                  <% } %>
                            
                                  <% if(!errors.passwordCategory && errors.password){%>
                                    <p style="text-align: center;color:red;"><%= errors.password.msg %></p>
                                      <% } %>
                                <% } %>

                              <% if(success !=''){%>
                                <p style="text-align: center;color:green;"><%= success %></p>
                                  <% } %>
                              <label for="username" class="col-md-3 control-label">Category Name</label>
                              <div class="col-md-9" >
                                  <input type="text" class="form-control" name="passwordCategory" placeholder="Enter Your Password Category Name">
                              </div>
                              
                              <label for="username" class="col-md-3 control-label">User Name</label>
                              <div class="col-md-9" >
                                <p style="margin-bottom: 10px;"></p>
                                  <input type="text" class="form-control" name="username" placeholder="Enter User Name for Category">
                              </div>
                              
                              <label for="password" class="col-md-3 control-label">Password</label>
                              <div class="col-md-9">
                                <p style="margin-bottom: 10px;"></p>
                                  <input type="text" class="form-control" name="password" placeholder="Enter Your Password for above Category Name">
                              </div>
                          </div>
                         
                          <div class="form-group">
                              <!-- Button -->                                        
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="Add Category" class="btn btn-primary">   
                              </div>
                          </div>
                          
                          <p><a href="/view-all-password">View All Passwords</a></p>
                           
                          
                          
                          
                      </form>
                   </div>
              </div>
  
         
         
          
   </div> 
      </div>
    </div>
    <%- include('footer') %>